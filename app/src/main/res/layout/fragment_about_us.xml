<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.a4.acesmndr.attendance.AboutUs">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:weightSum="1"
        android:textAlignment="center"
        android:id="@+id/layoutLinear"
        android:background="#E3F2FD">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:src="@drawable/attendance_logo"
            android:layout_weight="0.34"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance v2.1.0 Beta"
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@android:color/holo_blue_dark"
            android:paddingLeft="75dp"
            android:textColor="@android:color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A4 Developers"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:paddingLeft="20dp"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aashish Manandhar\nAayush Rijal\nAnkit Shrestha\nAbhishek Khatri"
            android:id="@+id/textView7"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@android:color/holo_blue_dark"
            android:paddingLeft="20dp"
            android:textColor="@android:color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="0.15" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any Suggestions or queries?"
            android:id="@+id/queries"
            android:layout_weight="0.34"
            android:background="@android:color/white"
            android:textSize="20dp"
            android:textColor="#0091EA" />


    </LinearLayout>
</FrameLayout>
